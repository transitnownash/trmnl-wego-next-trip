<div class="view">
  <div class="layout layout--row">
    <div class="grid grid--cols-5">
      <div class="col col--span-3">

        <div class="item mb--2">
          <div class="meta"></div>
          <div class="content">
            <span class="label label--small">Route</span>
            <span
              id="route-name"
              class="value value--xsmall"
              data-value-fit="true">-</span>
          </div>
        </div>
        <div class="item mb--2">
          <div class="meta"></div>
          <div class="content">
            <span class="label label--small">Stop</span>
            <span
              id="stop-name"
              class="value value--xsmall"
              data-value-fit="true">{{ stop.stop_name | default: 'Stop Not Found' }}</span>
          </div>
        </div>
        <div class="item mb--2">
          <div class="meta"></div>
          <div class="content">
            <span class="label label--small">Next Trip</span>
            <span
              id="trip-name"
              class="value value--xsmall"
              data-value-fit="true">-</span>
          </div>
        </div>
        <div class="grid grid--cols-2">
          <div class="item col--span-1">
            <div class="meta"></div>
            <div class="content">
              <span class="label label--small">Departs</span>
              <span
                id="departs"
                class="value value--xsmall"
                data-value-fit="true">-</span>
            </div>
          </div>
          <div id="future" class="col--span-1"></div>
        </div>
      </div>
      <div class="col col--span-2">
        <div
          id="wego-map"
          class="wego-map"
          style="overflow: hidden;">
          <div id="wego-map-canvas" style="width:100%; height:220px;">Loading ...</div>
        </div>
      </div>
    </div>
  </div>
</div>
